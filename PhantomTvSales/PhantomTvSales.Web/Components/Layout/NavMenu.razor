@inject PhantomTvSales.Web.Services.AuthState AuthState
@inject NavigationManager Nav
@implements IDisposable

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href=""><img src="images/logo.png" alt="Ventas TV" style="height:32px;" class="me-2" /></a>
        @* Connet SRL *@
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="clients">
                <i class="bi bi-people-fill nav-icon" aria-hidden="true"></i>
                Clientes
            </NavLink>
        </div>

        @* <div class="nav-item px-3">
            <NavLink class="nav-link" href="login">
                <span class="oi oi-account-login" aria-hidden="true"></span> Ingresar
            </NavLink>
        </div> *@
        @if (AuthState.IsAdmin)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="admin/users">
                    <i class="bi bi-person-gear nav-icon" aria-hidden="true"></i>
                    Usuarios
                </NavLink>
            </div>
        }

        @if (AuthState.IsAuthenticated)
        {
            <div class="nav-item px-3">
                <button class="btn btn-link nav-link" @onclick="Logout">
                    <i class="bi bi-box-arrow-right nav-icon" aria-hidden="true"></i>
                    Salir (@AuthState.Username)
                </button>
            </div>
        }
    </nav>
</div>

@code {
    protected override void OnInitialized()
    {
        AuthState.OnChange += HandleAuthChanged;
    }

    private void HandleAuthChanged()
    {
        _ = InvokeAsync(StateHasChanged);
    }

    async Task Logout()
    {
        await AuthState.ClearAsync();
        Nav.NavigateTo("/login", true);
    }

    public void Dispose()
    {
        AuthState.OnChange -= HandleAuthChanged;
    }
}

